% VARIABLE HEIGHT BLOCK FOR JUST KANJI
% #1: tcolorbox options

\newtcolorbox{kanjiflow}[1][]
{
	colframe = black!0,
	size=tight,
	colback  = white,
	coltitle = black,
	halign title= center,
	fontlower= \tiny,
	fonttitle= \tiny,
	#1,
}

%%% display kanji

\newcommand{\heartflow}[1]
{
	\begin{kanjiflow}[size=tight]{}
		\kanji #1
	\end{kanjiflow}
}

%%% display kanji with more padding

\newcommand{\heartspaced}[1]
{
	\begin{kanjiflow}[size=normal]{}
		\kanji #1
	\end{kanjiflow}
}

